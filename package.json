        "debug": "^2.2.0",
        "express": "^4.17.1",
        "isomorphic-ws": "^4.0.1",
        "node-hid": "^0.7.9",
        "npm": "^6.12.1",
        "pug": "^2.0.4",
        "typescript": "^3.6.4",
