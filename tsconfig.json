{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "build",
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "@/*": [
              "src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "lib": ["es5", "es2015", "dom", "scripthost"],
        "target": "es5",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/browser/**/*.ts"
    ]
}
