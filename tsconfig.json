{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "build",
        "outDir": "build",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "lib": ["es5", "es2015", "dom", "scripthost"],
        "target": "es5",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ]
}
